{
  "extends": [
    "wesbos"
  ],
  "rules": {
    "react/no-danger": 0
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@styles",
            "./src/styles/"
          ],
          [
            "@components",
            "./src/components"
          ],
          [
            "@hooks",
            "./src/hooks"
          ],
          [
            "@utilities",
            "./src/utilities"
          ]
        ],
        "extensions": [
          ".js",
          ".jsx",
          ".json"
        ]
      }
    }
  }
}

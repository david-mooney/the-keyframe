{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@templates/*": [
        "./src/templates/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@utilities/*": [
        "./src/utilities/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}
